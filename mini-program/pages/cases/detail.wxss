.info-header {
  display: flex;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.person-photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.person-info {
  flex: 1;
}

.person-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.person-age {
  font-size: 28rpx;
  color: #999;
  font-weight: normal;
}

.person-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.tag.case-type {
  background: #e6f7ff;
  color: #1890ff;
}

.tag.status.missing { background: #fff1f0; color: #ff4d4f; }
.tag.status.searching { background: #e6f7ff; color: #1890ff; }
.tag.status.found, .tag.status.reunited { background: #f6ffed; color: #52c41a; }

.case-no {
  font-size: 24rpx;
  color: #999;
}

/* 照片 */
.photo-section {
  margin-top: 24rpx;
}

.photo-scroll {
  white-space: nowrap;
}

.photo-item {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  display: inline-block;
  background: #f0f0f0;
}

/* 信息列表 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.add-btn {
  font-size: 26rpx;
  color: #1890ff;
}

.info-list {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.info-value.text-primary {
  color: #1890ff;
}

.detail-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.detail-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.detail-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 地图 */
.case-map {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

/* 轨迹 */
.track-list {
  padding-left: 20rpx;
  border-left: 2rpx solid #e8e8e8;
  margin-left: 16rpx;
}

.track-item {
  position: relative;
  padding-bottom: 32rpx;
  padding-left: 32rpx;
}

.track-item:last-child {
  padding-bottom: 0;
}

.track-dot {
  position: absolute;
  left: -27rpx;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #1890ff;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 2rpx #1890ff;
}

.track-content {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.track-location {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.track-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.track-time {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.share {
  background: #f5f5f5;
  color: #333;
}

.action-btn.primary {
  background: linear-gradient(135deg, #40a9ff, #1890ff);
  color: #fff;
}

.btn-icon {
  font-size: 32rpx;
}
