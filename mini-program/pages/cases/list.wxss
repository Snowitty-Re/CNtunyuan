.filter-bar {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 0 0 16rpx 16rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 44rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
}

.icon-search {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
}

.filter-tab {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background: #1890ff;
  color: #fff;
}

/* 案件卡片 */
.case-list {
  padding: 0 20rpx;
}

.case-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.case-header {
  display: flex;
  margin-bottom: 20rpx;
}

.case-photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.case-info {
  flex: 1;
}

.case-title {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.case-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.case-age {
  font-size: 26rpx;
  color: #999;
}

.case-type {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.type-tag, .status-tag {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.type-tag.elderly { background: #fff1f0; color: #ff4d4f; }
.type-tag.child { background: #e6f7ff; color: #1890ff; }
.type-tag.adult { background: #f6ffed; color: #52c41a; }
.type-tag.disability { background: #fffbe6; color: #faad14; }
.type-tag.other { background: #f5f5f5; color: #666; }

.status-tag.missing { background: #fff1f0; color: #ff4d4f; }
.status-tag.searching { background: #e6f7ff; color: #1890ff; }
.status-tag.found, .status-tag.reunited { background: #f6ffed; color: #52c41a; }
.status-tag.closed { background: #f5f5f5; color: #999; }

.case-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.case-time {
  font-size: 24rpx;
  color: #999;
}

.case-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.case-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

.case-no {
  font-size: 22rpx;
  color: #ccc;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 新增按钮 */
.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #40a9ff, #1890ff);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
}

.fab-icon {
  font-size: 48rpx;
  color: #fff;
}
