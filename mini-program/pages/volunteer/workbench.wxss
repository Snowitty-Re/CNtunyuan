.user-card {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 20rpx 20rpx;
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 240rpx;
  background: linear-gradient(135deg, #40a9ff, #1890ff);
}

.user-content {
  position: relative;
  display: flex;
  align-items: center;
  padding: 40rpx;
  z-index: 1;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.user-info {
  color: #fff;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-org {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 4rpx;
}

.user-role {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
}

.user-stats {
  position: relative;
  display: flex;
  background: #fff;
  margin: -40rpx 20rpx 0;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 2;
}

.user-stats .stat-item {
  flex: 1;
  text-align: center;
}

.user-stats .stat-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.user-stats .stat-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 快捷功能 */
.feature-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 0 20rpx 20rpx;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.icon-task { background: linear-gradient(135deg, #40a9ff, #1890ff); }
.icon-case { background: linear-gradient(135deg, #52c41a, #389e0d); }
.icon-dialect { background: linear-gradient(135deg, #ff6b6b, #ee5a6f); }
.icon-map { background: linear-gradient(135deg, #faad14, #fa8c16); }

.feature-name {
  font-size: 24rpx;
  color: #666;
}

/* 待办卡片 */
.todo-card, .activity-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 0 20rpx 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.card-more {
  font-size: 24rpx;
  color: #999;
}

.todo-list {
  margin-top: 16rpx;
}

.todo-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.todo-item:last-child {
  border-bottom: none;
}

.todo-tag {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  margin-right: 16rpx;
}

.todo-tag.priority-urgent { background: #fff1f0; color: #ff4d4f; }
.todo-tag.priority-high { background: #fff7e6; color: #fa8c16; }
.todo-tag.priority-normal { background: #e6f7ff; color: #1890ff; }
.todo-tag.priority-low { background: #f6ffed; color: #52c41a; }

.todo-content {
  flex: 1;
  overflow: hidden;
}

.todo-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.todo-meta {
  font-size: 24rpx;
  color: #999;
}

.todo-type {
  margin-right: 16rpx;
}

.todo-deadline {
  color: #ff4d4f;
}

.todo-action {
  margin-left: 16rpx;
}

.btn-do {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 28rpx;
  font-size: 24rpx;
}

/* 动态 */
.activity-list {
  padding-left: 20rpx;
  border-left: 2rpx solid #e8e8e8;
  margin-left: 20rpx;
}

.activity-item {
  position: relative;
  padding-bottom: 24rpx;
  padding-left: 32rpx;
}

.activity-item:last-child {
  padding-bottom: 0;
}

.activity-dot {
  position: absolute;
  left: -27rpx;
  top: 8rpx;
  width: 12rpx;
  height: 12rpx;
  background: #1890ff;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 2rpx #1890ff;
}

.activity-content {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.activity-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 40rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}
