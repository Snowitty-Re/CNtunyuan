.profile-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 0 20rpx 20rpx;
}

.user-main {
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-org {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.user-contact {
  padding-top: 24rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
}

/* 数据卡片 */
.data-card {
  background: linear-gradient(135deg, #40a9ff, #1890ff);
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 0 20rpx 20rpx;
}

.data-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
}

.data-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.data-item {
  text-align: center;
  color: #fff;
}

.data-num {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.data-label {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 菜单卡片 */
.menu-card {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 20rpx calc(40rpx + env(safe-area-inset-bottom));
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #ff4d4f;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
}

.btn-logout::after {
  border: none;
}
