.filter-bar {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.region-filter {
  width: 200rpx;
}

.picker-value {
  height: 72rpx;
  line-height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.search-box {
  flex: 1;
  position: relative;
}

.search-box input {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 72rpx 0 24rpx;
  font-size: 26rpx;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
}

/* 方言列表 */
.dialect-list {
  padding: 0 20rpx;
}

.dialect-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.dialect-left {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}

.play-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #40a9ff, #1890ff);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.play-icon {
  font-size: 32rpx;
  color: #fff;
  margin-left: 4rpx;
}

.dialect-info {
  flex: 1;
  overflow: hidden;
}

.dialect-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dialect-location {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.dialect-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.dialect-tags .tag {
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #666;
}

.dialect-right {
  text-align: right;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.duration {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.stats {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  font-size: 22rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 录音按钮 */
.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(238, 90, 111, 0.4);
  z-index: 100;
}

.fab-icon {
  font-size: 40rpx;
}
