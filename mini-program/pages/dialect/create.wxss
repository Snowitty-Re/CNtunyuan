.tips-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #e6f7ff, #f0f5ff);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.tips-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.tips-text {
  flex: 1;
  font-size: 26rpx;
  color: #1890ff;
  line-height: 1.5;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.location-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
}

.location-text {
  font-size: 28rpx;
  color: #999;
}

.location-picker .location-text {
  color: #333;
}

.location-icon {
  font-size: 32rpx;
}

/* 录音区域 */
.record-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 24rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.record-timer {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 40rpx;
}

.record-area {
  margin-bottom: 40rpx;
}

/* 录音动画 */
.record-waves {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  margin-bottom: 40rpx;
}

.wave-item {
  width: 8rpx;
  height: 40rpx;
  background: #1890ff;
  margin: 0 8rpx;
  border-radius: 4rpx;
  animation: wave 1s ease-in-out infinite;
}

@keyframes wave {
  0%, 100% { height: 40rpx; }
  50% { height: 100rpx; }
}

/* 播放进度 */
.play-progress {
  padding: 40rpx;
}

.time-display {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
}

/* 录音按钮 */
.record-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.record-btn {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #40a9ff, #1890ff);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.4);
  transition: all 0.3s;
}

.record-btn.recording {
  background: linear-gradient(135deg, #ff4d4f, #f5222d);
  animation: pulse 1s ease-in-out infinite;
}

.record-btn.has-recorded {
  background: linear-gradient(135deg, #52c41a, #389e0d);
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.record-icon {
  font-size: 72rpx;
}

.record-hint {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #999;
}

/* 操作按钮 */
.action-btns {
  display: flex;
  gap: 24rpx;
  padding: 0 40rpx;
}

.action-btns button {
  flex: 1;
}

/* 方言列表 */
.dialect-list {
  margin-top: 20rpx;
}

.dialect-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.dialect-item:last-child {
  border-bottom: none;
}

.dialect-info {
  flex: 1;
}

.dialect-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.dialect-meta {
  font-size: 24rpx;
  color: #999;
}

.dialect-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.dialect-status.active {
  background: #f6ffed;
  color: #52c41a;
}

.dialect-status.pending {
  background: #fffbe6;
  color: #faad14;
}
