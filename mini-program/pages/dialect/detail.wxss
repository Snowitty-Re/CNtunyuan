.audio-section {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.audio-visual {
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.audio-waves {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.wave-item {
  width: 8rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 4rpx;
  animation: wave 1s ease-in-out infinite;
}

@keyframes wave {
  0%, 100% { transform: scaleY(0.5); }
  50% { transform: scaleY(1.5); }
}

.audio-static {
  font-size: 100rpx;
  opacity: 0.8;
}

.audio-info {
  color: #fff;
  margin-bottom: 24rpx;
}

.audio-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.audio-duration {
  font-size: 28rpx;
  opacity: 0.8;
}

.audio-controls {
  margin-bottom: 32rpx;
}

.control-btn {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.control-icon {
  font-size: 48rpx;
  color: #fff;
  margin-left: 8rpx;
}

.audio-progress {
  margin: 0;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  max-width: 400rpx;
  text-align: right;
}

.collector-info {
  display: flex;
  align-items: center;
}

.collector-info .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background: #f0f0f0;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  display: block;
}

.stat-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 操作栏 */
.action-bar {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.action-bar button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
}

.action-bar button::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #40a9ff, #1890ff);
  color: #fff;
}

.btn-secondary {
  background: #f5f5f5;
  color: #333;
}
