.filter-bar {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
}

.filter-tab {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background: #1890ff;
  color: #fff;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: linear-gradient(135deg, #40a9ff, #1890ff);
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 0 20rpx 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  color: #fff;
}

.stat-value {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value.text-primary { color: #ffec3d; }
.stat-value.text-success { color: #52c41a; }

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 任务列表 */
.task-list {
  padding: 0 20rpx;
}

.task-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #1890ff;
}

.task-card.completed {
  border-left-color: #52c41a;
}

.task-card.processing {
  border-left-color: #faad14;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-priority {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  margin-left: 16rpx;
}

.priority-urgent { background: #fff1f0; color: #ff4d4f; }
.priority-high { background: #fff7e6; color: #fa8c16; }
.priority-normal { background: #e6f7ff; color: #1890ff; }
.priority-low { background: #f6ffed; color: #52c41a; }

.task-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.tag.type { background: #f5f5f5; color: #666; }
.tag.status.draft { background: #f5f5f5; color: #999; }
.tag.status.pending { background: #fff7e6; color: #fa8c16; }
.tag.status.assigned { background: #e6f7ff; color: #1890ff; }
.tag.status.processing { background: #e6f7ff; color: #1890ff; }
.tag.status.completed { background: #f6ffed; color: #52c41a; }
.tag.status.cancelled { background: #f5f5f5; color: #999; }

.task-info {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-label {
  color: #999;
  margin-right: 8rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.task-progress {
  display: flex;
  align-items: center;
  margin: 16rpx 0;
}

.task-progress progress {
  flex: 1;
  margin-right: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #1890ff;
  width: 60rpx;
  text-align: right;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 16rpx;
}

.task-assignee {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.task-assignee .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background: #f0f0f0;
}

.task-deadline {
  font-size: 24rpx;
  color: #999;
}

.task-deadline .overdue {
  color: #ff4d4f;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
